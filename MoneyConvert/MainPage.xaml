<Page
	x:Class="MoneyConvert.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:local="using:MoneyConvert"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
    >

    <Grid Background="#FF2C2C2C" BorderBrush="#08F" BorderThickness="1">

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="50"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1">
            <Grid.FocusVisualSecondaryBrush>
                <SolidColorBrush Color="#99000000" Opacity="0"/>
            </Grid.FocusVisualSecondaryBrush>
            <Grid.Background>
                <ImageBrush ImageSource="ms-appx:///Assets/arrow.png" Stretch="Uniform" Opacity="0.15"/>
            </Grid.Background>
        </Grid>

        <TextBox x:Name="FirstValue" Grid.Row="0" Grid.Column="0"/>
        <TextBox x:Name="SecondValue" Grid.Row="0" Grid.Column="2"/>

        <TextBlock Text="1233r" Grid.Row="1" Grid.Column="0" Style="{StaticResource MoneyValue}"/>
        <TextBlock Text="2323" Grid.Row="1" Grid.Column="2" Style="{StaticResource MoneyValue}"/>

        <HyperlinkButton Content="Изменить валюту" Grid.Column="0" Grid.Row="2" Click="HyperlinkButton_Click_FirstVal"/>
        <HyperlinkButton Content= "Изменить валюту" Grid.Column="2" Grid.Row="2"/>

        <TextBlock x:Name="Error" Text="sddsdsdssd" Grid.Row="3" Grid.ColumnSpan="3" Style="{StaticResource Error}"/>
    </Grid>

</Page>
